<resources>
    <!-- Splash screen theme -->
    <style name="Theme.105Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/system_accent1_100</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splash_screen_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Radio105.NoActionBar</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.Radio105" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_400</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_200</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="Theme.Radio105.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Radio105.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Radio105.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="imageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
